pipeline{
    agent any
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                  sh 'docker build -t pkjack/my-app-1.0 .'
                }
            }
        }
         stage('Deploy Docker Image') {
            steps {
                script {
                withCredentials([string(credentialsId: 'pkjack', variable: 'dockerhub')]) {
    sh 'docker login -u pkjack -p ${dockerhub}'
}
                 sh 'docker push pkjack/my-app-1.0'
                }
            }
        }
      
        }
    }

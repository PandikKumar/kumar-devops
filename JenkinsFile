pipeline{
    agent any
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                  sh 'docker build -t pkjack/my-app-1.0 .'
                }
            }
        }
        
        
 stage('Deploy App on k8s') {
      steps {
            script {
                try{
                    sh "kubectl create -f ."
                }catch(error){
                    sh "kubectl create -f ."
            }
}
        }
      
    }
	
    }
	}

